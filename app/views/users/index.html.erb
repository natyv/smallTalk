<!-- Modal Structure -->
<div id="modal1" class="modal bottom-sheet modal-position" style="top: -100%;">
  <div class="modal-content">
    <div class="row">
    <form class="col s12">
      <div class="row">
        <form action="/signin" method = "post">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

          <div class="input-field col s12">
            <i class="material-icons prefix">account_circle</i>
            <input id="icon_prefix" type="text" class="validate email" name ='email'>
            <label for="icon_prefix">Email</label>
          </div>
          <div class="input-field col s12">
            <i class="material-icons prefix">vpn_key</i>
            <input id="icon_telephone" type="password" class="validate password" name='password'>
            <label for="icon_telephone">Password</label>
          </div>
        </div>


        <!-- Login Button -->
        <div class="col s4 offset-s4 center-align">
          <a id="login" class="waves-effect waves-light btn"><i class="material-icons left"></i>Login</a>
        </div>
      </form>

      <!-- SignUp Button -->
      <div class="col s4 offset-s4 center-align">
        <a class="waves-effect waves-light"><i class="material-icons left"></i>Sign-Up</a>
      </div>
    </form>
  </div>
  </div>
  <div class="modal-footer">
    <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat"><i class="fa fa-times" aria-hidden="true"></i></a>
  </div>
</div>



