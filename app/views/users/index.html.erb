<!-- Modal Structure -->


<div id="modal1" class="modal bottom-sheet modal-position" style="top: -100%; overflow: hidden;     min-height: 330px;">
  <div class="modal-content">
    <div class="row">


      <!-- if logged in - SHOW -->
      <% if !session[:user].nil? %>


        <p class="center-align">Signed in as: <span style="font-weight: bold;"> <%= session[:user]["email"] %></span></p>
        <p style="display:none" id="user_id"><%=session[:user]["id"]%></p>
        <form action="/signout" method ="post">
          <input type="hidden" value="delete" name="_method">
            <!-- <button id="logout">Logout</button></li> -->
            <a id="logout" class="waves-effect waves-light btn orange s6 col offset-s3" style="height: 68px; margin-bottom: 13px;"><p><i class="fa fa-sign-out" aria-hidden="true"></i> Sign Out</p></a>
            <a href="/favourites" id="show-favourites" style="height: 68px; margin-bottom: 13px;" class="waves-effect waves-light btn orange s6 col offset-s3"><p><i class="fa fa-heart" aria-hidden="true"></i> Favourites</p></a>
        </form>

      <% else %>
      <!-- if NOT logged in - SHOW -->


    <form class="col s12">
      <div class="row">
        <form action="/signin" method = "post">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

          <div class="input-field col s12 l4 offset-l4">
            <i class="material-icons prefix">account_circle</i>
            <input id="icon_prefix" type="text" class="validate email" name ='email'>
            <label for="icon_prefix">Email</label>
          </div>
          <div class="input-field col s12  l4 offset-l4">
            <i class="material-icons prefix">vpn_key</i>
            <input id="icon_telephone" type="password" class="validate password" name='password'>
            <label for="icon_telephone">Password</label>
          </div>
        </div>








        <!-- Login Button -->
        <div class="col s4 offset-s4 center-align">
          <a id="login" class="waves-effect waves-light btn"><i class="material-icons left"></i>Login</a>
        </div>
      </form>

      <!-- SignUp Button -->
      <div class="col s4 offset-s4 center-align">
        <a href="/signup" class="waves-effect waves-light"><i class="material-icons left"></i>Sign-Up</a>
      </div>
    </form>
      <% end %>
